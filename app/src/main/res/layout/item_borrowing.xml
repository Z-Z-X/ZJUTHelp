<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/card_content_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.todddavies.components.progressbar.ProgressWheel
            xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_wheel"
            android:layout_width="64sp"
            android:layout_height="64sp"
            ProgressWheel:text="12"
            ProgressWheel:textColor="@color/colorPrimaryDark"
            ProgressWheel:textSize="24sp"
            ProgressWheel:rimColor="@color/colorPrimary"
            ProgressWheel:barLength="60dp"
            ProgressWheel:barColor="@color/colorPrimary"
            ProgressWheel:barWidth="8dp"
            ProgressWheel:rimWidth="1dp"/>

        <LinearLayout
            android:layout_marginStart="@dimen/card_content_padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/book_name"
                android:text="凡·高"
                android:textSize="@dimen/abc_text_size_subhead_material"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/book_borrow_time"
                android:text="借书时间:2015-04-01 20:39:09"
                android:layout_marginTop="@dimen/card_content_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/book_return_time"
                android:text="应还日期:2015-05-11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/book_is_overdue"
                android:text="超期情况: 未超期"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>